<UserControl x:Class="IPCameraIndoorControlLibrary.Station.UploadFirmwareBusiness.UI.ucLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IPCameraIndoorControlLibrary.Station.UploadFirmwareBusiness.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#ffffff">

    <Grid Margin="5">
        <StackPanel>
            <Label Foreground="Blue" BorderBrush="#777777"  FontSize="20" FontWeight="SemiBold" Content="Vui lòng chọn loại dữ liệu log cần truy vấn:"/>

            <WrapPanel  Margin="0,15,0,0">
                <ComboBox VerticalContentAlignment="Center" Padding="20,0,0,0" Height="40" x:Name="cbb_logtype" FontSize="20" FontWeight="SemiBold" IsEditable="False" Width="500" HorizontalAlignment="Left"/>
                <Button Height="40" Content="Go" FontSize="20" Margin="10,0,0,0" Width="100" Click="Button_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
    
</UserControl>
