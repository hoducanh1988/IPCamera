<UserControl x:Class="IPCameraIndoorControlLibrary.Common.UI.ucButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IPCameraIndoorControlLibrary.Common.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#ffffff">

    <StackPanel Margin="20">
        <WrapPanel>
            <Label BorderBrush="#777777" BorderThickness="0,0,0,1" Foreground="Blue" FontSize="30" FontWeight="SemiBold" Content="Vui lòng nhấn và giữ nút nhấn trên camera:"/>
        </WrapPanel>
        <Label Margin="0,30,0,0" FontSize="22" Content="Thời gian còn lại: "/>
        <WrapPanel>
            <Label x:Name="lbl_TimeOut" Foreground="Red" FontSize="40" Content="30"/>
            <Label Foreground="Red" FontSize="40" Content="(sec)"/>
        </WrapPanel>
    </StackPanel>
    
</UserControl>
